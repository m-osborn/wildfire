{
    "key": "jbdbc-wildfire-trigger",
    "lang": {
        "en-US": {
            "name": "Wildfire Twitter",
            "description": "This is a simple trigger for the Wildfire Twitter demo app"
        }
    },
    "version": "1.0",
    "dataExtension": {
        "fields": [
            {
                "name": "twitter_username",
                "dataType": "text",
                "maxLength": "15",
                "isNullable": false,
                "defaultValue": ""
            },
            {
                "name": "tweet",
                "dataType": "text",
                "maxLength": "140",
                "isNullable": false,
                "defaultValue": ""
            }
        ],
        "sendableCustomObjectField": "alternativeEmail",
        "sendableSubscriberField": "_SubscriberKey"
    },
    "edit": {
        "uri": "index.html",
        "maxHeight": 500,
        "maxWidth": 750,
        "minHeight": 300,
        "minWidth": 450,
        "steps": 1
    }
}
